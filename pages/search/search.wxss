.searchContainer {
  position:relative;
  padding: 0 20rpx;
}
.searchContainer .header {
  display:flex;
  width: 100%;
  line-height: 60rpx;
  height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .header .searchInput {
  position:relative;
  flex:1;
  background: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
  margin-right:100rpx;
}
.searchContainer .header input {
  width: 100%;
  height: 100% ;
  padding: 0 60rpx;

}
.header .searchInput .clear {
  position:absolute;
  top:10rpx;
  right:20rpx;
  z-index: 2;
  box-sizing: border-box;
  width: 40rpx;
  height:40rpx;
  line-height: 40rpx;
  padding-left:2rpx;
  text-align: center;
  border-radius: 50%;
  background-color: rgba(237, 237, 237, 0.7);
}
.searchIcon {
  position:absolute;
  top:0;
  left:20rpx;
  width: 40rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
}
.searchContainer .searchConfirm {
 position: absolute;
 right:10rpx;
 z-index:3;
 width: 100rpx;
 height: 60rpx;
 text-align: center;
 line-height: 60rpx;
}

/* 搜索内容展示区 */
.showSearchContent .searchContent{
  font-size: 24rpx;
  color: #d43c33;
  border-bottom: 1px solid   #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
.searchItem{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.searchItem  .icon-search1{
 margin-right:20rpx;
}
.searchItem .content{
  flex: 1;
  font-size: 26rpx;
  border-bottom:1px solid #eee;
}


/* 历史记录 */
.history {
  position:relative;
  display:flex;
  flex-wrap:wrap;
  line-height: 50rpx;
  margin-top:20rpx;
}
.history .title{
  font-size: 28rpx;
  height:50rpx
}
.history .delete {
 position:absolute;
 bottom:0;
 right:0;
 height: 50rpx;
}
.historyItem {
  height:50rpx;
  padding: 0 30rpx;
  background-color: #ededed;
  border-radius: 30rpx;
  margin: 0 0 20rpx 20rpx;
  font-size: 26rpx;
  max-width: 200rpx;
  white-space: nowrap; 
  text-overflow: ellipsis; 
  overflow: hidden; 
}

/* 热搜榜 */
.hotContainer{
  line-height: 80rpx;
  margin-top: 30rpx;
}
.hotContainer .title{
 font-size: 28rpx;
 height: 80rpx;
 border-bottom:1px solid #eee;
}
.hotList {
  display: flex;
  width: 100%;
  flex-wrap:wrap;
  padding:0 20rpx;
}
.hotItem {
  display:flex;
  width: 50%;
  font-size: 26rpx;
}
.hotItem .order {
  padding-right:10rpx;
}
.hotItem image {
  width:35rpx;
  height:20rpx;
  margin-top: 20rpx;
  margin-left:10rpx;
}