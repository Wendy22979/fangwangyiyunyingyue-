/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 300rpx;
}
image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航区域 */
.navContainer{
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
}
.nav-item{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}

.nav-item .iconfont {
  font-size: 50rpx;
  color:#fff;
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  background-color: rgb(240, 19, 19);
  text-align:center;
  line-height: 100rpx;
  margin:20rpx 0;
}


/* 歌曲推荐区域 */
.recommendContainer{
  padding:20rpx;
}


/* 内容区域 */
.recommendScroll {
  display:flex;
  height:300rpx;
  padding-top: 20rpx;
}
.recommendScroll .scrollItem{
 width: 200rpx;
 margin-right:20rpx;
}
.recommendScroll .scrollItem image {
  width: 200rpx;
  height: 200rpx;
}
.recommendScroll .scrollItem text {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}


/* 排行榜 */
.topList .navHeader{
 padding: 0 20rpx;
}
swiper {
  height: 460rpx;
}
.swiperItem {
  background-color: #fbfbfb;
  margin:0 20rpx 20rpx;
}
.swiperItem .title{
   padding: 20rpx 0;
}

.topList  image {
  width: 100rpx;
  height: 100rpx;
  margin-right:30rpx;
  border-radius: 6rpx;
}

.topList .musicItem {
  display:flex;
  align-items:center;
  margin-bottom:20rpx;

}
.topList .musicItem .musicName{
  max-width:300rpx;
  display:block;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  padding: 0 30rpx;
}



